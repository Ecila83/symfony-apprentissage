{% extends "base.html.twig" %}

{% block body %}
	<a href="{{path('todo_form')}}">Cr√©er une todo</a>
	<br>
	<ul>
		{% for todo in todos %}
			<li>
				<span>{{todo.id}}</span>
				<span>{{todo.content}}</span>
				<span>{{todo.done}}</span>
				<span>{{todo.createdat | date()}}</span>
				<a href="{{path('todo_edit', {id: todo.id})}}">Edit</a>
				<a href="{{path('todo_remove', {id: todo.id})}}">Suprimer</a>

			</li>
		{% endfor %}
	</ul>

{% endblock %}
